<div style="
    width: 30em;
    margin: auto;
    margin-top: 11em;
    padding: 30px 30px 10px;
    border-radius: 5px;
    background: #fff;">
	
	<p class='text-center'>Login with email </p>
	<p style="color: #757575">Sign up with <a href="">Google</a> instead?
</p>
	<style type="text/css">label{color:white;}</style>
	<div class="row">
	  <div class="col-md-6 offset-3">
	    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

	      <%= f.label :email %>
	      <%= f.email_field :email, class: 'form-control' %>

	      <%= f.label :password %>
	      <%= f.password_field :password, class: 'form-control' %>

	      <%= f.submit "Log in", class: " mt-2 btn btn-primary" %>
	    <% end %>

	  </div>
	</div>
</div>

